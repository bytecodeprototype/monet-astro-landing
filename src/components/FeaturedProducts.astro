---
import { Image } from "astro:assets";
import prxImg from "../assets/prx.png";
import seikoImg from "../assets/seiko.png";
import orientImg from "../assets/orient.png";
---

<section id="destacados" class="section">
    <div class="container">
        <div class="section-header">
            <h2>Curaduría</h2>
            <p>
                Tres piezas seleccionadas por su historia, mecánica y demanda.
            </p>
        </div>

        <div class="grid-3">
            <article class="product-card">
                <div class="product-img">
                    <span class="badge">Más Buscado</span>
                    <Image
                        src={prxImg}
                        alt="Tissot PRX"
                        loading="lazy"
                        format="png"
                        inferSize
                        onerror="this.onerror=null;this.src='assets/prx.png';this.srcset='';"
                    />
                </div>
                <div class="product-info">
                    <small class="brand-label">Tissot</small>
                    <h3>PRX Powermatic 80</h3>
                    <p class="product-desc">
                        El rey del brazalete integrado. Dial 'Ice Blue' con
                        textura waffle y maquinaria suiza con 80h de reserva.
                    </p>
                    <div class="product-footer">
                        <span class="price">Consultar</span>
                        <button
                            onclick="openProduct('tissot')"
                            class="btn-link"
                        >
                            Ver detalles
                            <svg class="icon" viewBox="0 0 24 24">
                                <path d="M5 12h14"></path>
                                <path d="m12 5 7 7-7 7"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </article>

            <article class="product-card">
                <div class="product-img">
                    <span
                        class="badge"
                        style="background: var(--text); color: white;"
                    >
                        Pieza de Culto
                    </span>
                    <Image
                        src={seikoImg}
                        alt="Seiko Arabic"
                        loading="lazy"
                        format="png"
                        inferSize
                        onerror="this.onerror=null;this.src='assets/seiko.png';this.srcset='';"
                    />
                </div>
                <div class="product-info">
                    <small class="brand-label">Seiko</small>
                    <h3>Seiko 5 'Arabic Dial'</h3>
                    <p class="product-desc">
                        Una rareza exótica (40mm). Índices en números
                        indo-arábigos. Difícil de conseguir y con alta
                        revalorización.
                    </p>
                    <div class="product-footer">
                        <span class="price">Consultar</span>
                        <button onclick="openProduct('seiko')" class="btn-link">
                            Ver detalles
                            <svg class="icon" viewBox="0 0 24 24">
                                <path d="M5 12h14"></path>
                                <path d="m12 5 7 7-7 7"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </article>

            <article class="product-card">
                <div class="product-img">
                    <span class="badge" style="background: var(--green-luxury)">
                        Best Value
                    </span>
                    <Image
                        src={orientImg}
                        alt="Orient Ray II"
                        loading="lazy"
                        format="png"
                        inferSize
                        onerror="this.onerror=null;this.src='assets/orient.png';this.srcset='';"
                    />
                </div>
                <div class="product-info">
                    <small class="brand-label">Orient</small>
                    <h3>Ray II Diver 200m</h3>
                    <p class="product-desc">
                        El "Tool Watch" definitivo. Certificado 200m, automático
                        in-house y un lumen espectacular.
                    </p>
                    <div class="product-footer">
                        <span class="price">Consultar</span>
                        <button
                            onclick="openProduct('orient')"
                            class="btn-link"
                        >
                            Ver detalles
                            <svg class="icon" viewBox="0 0 24 24">
                                <path d="M5 12h14"></path>
                                <path d="m12 5 7 7-7 7"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </article>
        </div>

        <div class="section-cta">
            <a
                href="#"
                data-wa="Hola, quiero ver el inventario completo."
                class="btn btn-outline"
            >
                Ver inventario completo
            </a>
        </div>
    </div>
</section>
